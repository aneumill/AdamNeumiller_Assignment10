@model IEnumerable<Team>

<h2 class="text-center">Teams</h2>

<a class="btn text-center  @("All Teams" == ViewBag.SelectedTeam ? "btn-secondary" : "btn-dark") " style="margin-bottom: 5%;width: 100% " asp-action="Index" asp-controller="Home" asp-route-teamname="All Teams" asp-route-teamID="0">All Teams</a>

<!---This is the view that dynamically changes teh selected team category-->
@foreach (var x in Model)
{
    <a class="btn text-center @(x.TeamName == ViewBag.SelectedTeam ? "btn-secondary" : "btn-dark")" style="margin-bottom:5%; width:100%" asp-action="Index" asp-controller="Home" asp-route-teamname="@x.TeamName" asp-route-teamID="@x.TeamId">@x.TeamName</a>
    <br />

}

